DROP FUNCTION IF EXISTS GetUserName;

DELIMITER $$

CREATE FUNCTION GetUserName(id INT) RETURNS VARCHAR(255) DETERMINISTIC
BEGIN

    IF id <= 0 THEN
		RETURN 'Wrong id number';
	ELSE
		RETURN (SELECT LASTNAME FROM READERS
        WHERE READER_ID = id);
	END IF;

END $$

DELIMITER ;

SELECT GetUserName(4) AS NAME;
